# Cipher MCP Configuration for ras-UI Design System
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for memory processing and retrieval)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MCP Server Configuration
MCP_SERVER_MODE=aggregator

# Memory Configuration
CIPHER_PROJECT_NAME=ras-UI Design System
CIPHER_WORKSPACE_ID=ras-ui-project

# Optional: Custom memory storage path
# CIPHER_MEMORY_PATH=./cipher-memory

# Optional: Enable debug logging
# CIPHER_DEBUG=true